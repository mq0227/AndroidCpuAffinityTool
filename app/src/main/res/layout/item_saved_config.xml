<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:minWidth="140dp">

        <!-- 应用图标和名称 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivAppIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvConfigAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="App Name"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:maxWidth="80dp"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/tvConfigPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="com.example..."
                    android:textSize="9sp"
                    android:textColor="#999999"
                    android:maxWidth="80dp"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 规则数量 -->
        <TextView
            android:id="@+id/tvConfigRuleCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_count"
            android:textSize="11sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"/>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="#F5F5F5"
            android:padding="4dp">

            <TextView
                android:id="@+id/btnQuickApply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/apply"
                android:textSize="11sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"/>

            <TextView
                android:id="@+id/btnQuickStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/monitoring"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
